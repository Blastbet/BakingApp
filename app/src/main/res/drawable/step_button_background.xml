<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Default background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/cardview_light_background"/>

            <stroke android:width="@dimen/cardview_default_elevation"
                android:color="@color/cardview_shadow_end_color" />
            <padding
                android:left="@dimen/recipe_detail_cardview_insets"
                android:bottom="@dimen/recipe_detail_cardview_insets"
                android:right="@dimen/recipe_detail_cardview_insets"
                android:top="@dimen/recipe_detail_cardview_insets"/>
        </shape>
    </item>

    <!-- Selected background -->
    <item
        android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorAccentLight"/>
            <padding
                android:left="@dimen/recipe_detail_cardview_insets"
                android:bottom="@dimen/recipe_detail_cardview_insets"
                android:right="@dimen/recipe_detail_cardview_insets"
                android:top="@dimen/recipe_detail_cardview_insets"/>
        </shape>
    </item>

</selector>